    <!--rviz-->
    <arg name="rvizconfig" default="$(find tvc_navigation)/rviz/wpTrack.rviz" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" respawn="true" />

</launch>