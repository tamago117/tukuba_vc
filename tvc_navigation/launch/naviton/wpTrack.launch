<?xml version="1.0"?>

<launch>
    <arg name="way_file" default="way1.csv"/>

    <include file="$(find tvc_navigation)/launch/naviton/include/slam_2d.launch">
        <arg name="nav_mode" default="slam"/>
        <arg name="mapFile" value="$(find tvc_navigation)/resources/tukuba/map.yaml"/>
    </include>

    <node name="wp_load" pkg="tvc_wpTool" type="wp_load">
        <param name="filePath" value="$(find tvc_navigation)/csv/$(arg way_file)"/>
        <param name="map_frame_id" value="map"/>
    </node>
    <node name="wp_visualizer" pkg="tvc_wpTool" type="wp_visualizer">
        <remap from="path" to="wayPoint/path"/>
    </node>
    <node name="wp_control" pkg="tvc_wpTool" type="wp_control">
        <param name="base_link_frame_id" value="base_foot_point"/>
        <param name="map_frame_id" value="map"/>
        <param name="target_pitch" value="1.0"/>
        <param name="waypoint_pitch" value="0.5"/>
        <param name="maxSpeed" value="0.7"/>
        <param name="loop_rate" value="100"/>
        <param name="target_deviation" value = "0.1"/>
        <remap from="path" to="wayPoint/path"/>
    </node>


    <node name="state_lattice_planner" pkg="tvc_navigation" type="state_lattice_planner">
        <rosparam file="$(find tvc_navigation)/config/naviton/state_lattice_planner.yaml" command="load" />
    </node>
    <node name="lattice_planner_trace" pkg="tvc_navigation" type="lattice_planner_trace" >
        <param name="base_link_frame_id" value="base_foot_point"/>
        <param name="map_frame_id" value="map"/>
        <param name="loop_rate" value="50"/>
        <param name="max_angular_vel" value="2.0"/>
        <param name="minSpeed" value="0.4"/>
        <param name="maxSpeed" value="0.7"/>
        <param name="maxCurvature" value="3"/>
        <remap from="path" to="wayPoint/path"/>
    </node>
    <node pkg="tvc_navigation" type="costmap_node" name="costmap_node">
        <rosparam command="load" file="$(find tvc_navigation)/config/naviton/local_costmap_params.yaml" />
        <remap from="costmap_node/my_costmap/costmap" to="state_lattice_planner/costmap"/>
    </node>

    <!--safety function-->
    <node pkg="tvc_navigation" name="laser2pc" type="laser2pc"/>
    <node pkg="tvc_navigation" name="safety_limit" type="safety_limit" output="screen">
        <param name="max_nn" value="100"/>
        <param name="robot_radius" value="0.2"/>
        <param name="x_max" value="3.0"/>
        <param name="x_min" value="-1.0"/>
        <param name="y_max" value="0.3"/>
        <param name="y_min" value="-0.3"/>
        <param name="loop_rate" value="50"/>
        <param name="dt" value="0.15"/>
        <param name="recovery_start_time" value="0.5"/>

        <remap from="safety_limit/cmd_vel_in" to="lattice_planner_trace/cmd_vel"/>
     </node>
     <node pkg="tvc_navigation" name="simple_recovery" type="simple_recovery">
        <param name="linear_vel" value="-0.3"/>
        <param name="angular_vel" value="0"/>
        <param name="duration" value="1.5"/>

     </node>

    <node name="twist_maneger" pkg="tvc_navigation" type="twist_maneger">
        <param name="base_link_frame_id" value="base_foot_point"/>
        <param name="map_frame_id" value="map"/>
        <param name="loop_rate" value="50"/>
        <param name="maxYaw_rate" value="2"/>
        <remap from="path" to="wayPoint/path"/>
        <remap from="cmd_vel" to="safety_limit/cmd_vel_out"/>
        <remap from="twist_maneger/cmd_vel" to="unity/cmd_vel"/>
        <remap from="recovery/mode" to="simple_recovery/mode"/>
        <remap from="recovery/cmd_vel" to="simple_recovery/cmd_vel"/>
    </node>


    <!--<node name="pureWpTrace" pkg="tvc_navigation" type="pureWpTrace">
        <param name="base_link_frame_id" value="base_footprint"/>
        <param name="map_frame_id" value="map"/>
